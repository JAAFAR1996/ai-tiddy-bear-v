{
  "schedules": {
    "daily_check": "02:00",
    "weekly_update": "Sunday 03:00",
    "monthly_audit": "1st 04:00"
  },
  "thresholds": {
    "critical_vulns": 0,
    "high_vulns": 2,
    "outdated_critical": 5,
    "code_security_high": 0,
    "dependency_conflicts": 3
  },
  "notifications": {
    "email_enabled": true,
    "webhook_enabled": false,
    "alert_email": "security@ai-teddy-bear.com",
    "emergency_contacts": [
      "admin@ai-teddy-bear.com",
      "security@ai-teddy-bear.com"
    ]
  },
  "auto_actions": {
    "backup_before_update": true,
    "test_after_update": true,
    "rollback_on_failure": true,
    "emergency_shutdown": true,
    "auto_update_critical": false,
    "quarantine_vulnerable": true
  },
  "critical_packages": [
    "fastapi",
    "sqlalchemy",
    "redis",
    "cryptography",
    "pyjwt",
    "passlib",
    "slowapi",
    "openai",
    "better-profanity",
    "email-validator"
  ],
  "security_policies": {
    "min_password_length": 12,
    "require_2fa": true,
    "session_timeout": 3600,
    "max_login_attempts": 3,
    "encryption_required": true
  },
  "monitoring": {
    "health_check_interval": 300,
    "log_retention_days": 90,
    "alert_cooldown_minutes": 30,
    "max_concurrent_updates": 3
  },
  "compliance": {
    "coppa_mode": true,
    "gdpr_mode": true,
    "audit_logging": true,
    "data_encryption": true,
    "child_safety_checks": true
  }
}
